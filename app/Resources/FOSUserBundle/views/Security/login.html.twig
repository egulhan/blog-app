{% extends 'layout.html.twig' %}

{% block content %}

    <form action="{{ path("fos_user_security_check") }}" method="post" style="margin: 0 auto; width: 400px;">
        {% if error %}
            <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" />
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="checkbox" style="margin-top: 0;">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                    </label>
                </div>
            </div>
            <div class="col-sm-4">
                <a href="{{ path('fos_user_registration_register') }}">Register</a>
            </div>
        </div>

        <input type="submit" class="btn btn-default"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>

{% endblock content %}

