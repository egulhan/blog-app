{% extends 'layout.html.twig' %}

{% block content %}
    <div id="wrapper">
        <div id="container">
            {% if posts %}
                {% for post in posts %}
                    <div class="post">
                        <h2 class="post-title">{{ post.getTitle() }}</h2>
                        <p class="post-meta text-muted">{{ post.getCreatedTime()|date("Y-m-d H:i:s") }} by <a href="#">{{ post.getUser() }}</a></p>
                        {{ post.getShortContent() }}
                        <a href="{{ path('post_show', {'slug': post.getSeoUrl()}) }}"> [read more]</a>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning">No posts found</div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
